{
    "variables": {
        "account_file": "",
        "project_id": "",
    },
    "builders": [{
        "type": "googlecompute",
        "account_file": "{{user `account_file`}}",
        "project_id": "{{user `project_id`}}",
        "source_image": "ubuntu-1604-xenial-v20161020",
        "zone": "europe-west1-d",
        "disk_size": "10",
        "disk_type": "pd-standard",
        "image_description": "cloudfuzzer bastion image",
        "image_family": "cloudfuzzer-bastion",
        "image_name": "cloudfuzzer-bastion",
        "machine_type": "n1-standard-1",
        "ssh_username": "ubuntu"
    }],
    "provisioners": [
    {
        "type": "file",
        "source": "../vm-keys/bastion-key",
        "destination": "/tmp/bastion-key"
    },
    {
        "type": "file",
        "source": "../vm-keys/fuzzvm-key.pub",
        "destination": "/tmp/fuzzvm-key.pub"
    },
    {
        "type": "shell",
        "script": "../bastion/install.sh"
    }]


}
